<div data-role="header">
  <% if current_user %>
    <h1>    Logged in as <%= current_user.email %>.</h1>
<%= link_to "Home", root_path %>
<% end %>
</div>
 
<div data-role="content">
  <p>
  <%= paginate @users %>
  </p>
  <ul data-role="listview">
    <% @users.each do |user| %>
    <li>
    <%=link_to user.username, user%><br/>
    <%=user.email%>
  <%if !user.firstname.blank? %><br/> <%end%>
    <%=user.firstname %>
    <%=user.lastname %>
    </li>
    <% end %>
  </ul>
</div>
