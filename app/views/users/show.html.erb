<div data-role="header">
  <h1><%=@user.username%></h1>
   <%= link_to 'Home', root_path, "class" => "ui-btn-left" %>
</div>
 
<div data-role="content">
  <p><b>Username</b></p>
  <p><%=@user.username%></p>
  <p><b>Password:</b></p>
  <p><%=@user.pword%></p>
  <p><b>Email:</b></p>
  <p><%=@user.email%></p>
  <p><b>Firstname:</b></p>
  <p><%=@user.firstname%></p>
  <p><b>Lastname:</b></p>
  <p><%=@user.lastname%></p>
  <%if @user.username==current_user.username%>
    <p><%=link_to "edit",edit_user_path(@user)%></p>
  <%end%>
</div>
